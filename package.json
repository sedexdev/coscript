{
    "name": "controller",
    "version": "3.0.0",
    "description": "server side implementation for the CoScript controller",
    "main": "server.js",
    "jest": {
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ]
    },
    "scripts": {
        "test": "jest --watchAll",
        "start": "node server.js",
        "server": "nodemon server.js",
        "client": "npm start --prefix ./view",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix view && npm run build --prefix view"
    },
    "author": "Andrew Macmillan",
    "license": "MIT",
    "devDependencies": {
        "jest": "^30.0.5",
        "node-mocks-http": "^1.8.1",
        "nodemon": "^3.1.10",
        "supertest": "^4.0.2"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "concurrently": "^9.2.0",
        "config": "^3.3.1",
        "connect-mongodb-session": "^5.0.0",
        "cryptr": "^6.0.2",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "express-validator": "^6.3.1",
        "gravatar": "^1.8.1",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.16.4",
        "nodemailer": "^6.4.6",
        "uuid": "^7.0.3"
    }
}
